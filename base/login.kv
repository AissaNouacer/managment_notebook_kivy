#:include connected.kv
#:import utils kivy.utils
<SmoothButton@Button+Label>:
    background_color:(0,0,0,0)
    background_normal:''
    back_color:( 0,1,1,.5)

    border_radius:[18,2,18,2]
    canvas.before:
        Color:
            rgba:self.back_color
        RoundedRectangle:
            size:self.size
            pos:self.pos
            radius:self.border_radius
<login>:
    BoxLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "Bb.png"
        BoxLayout:
            orientation:'vertical'
            FloatLayout:
                Label:
                    text:""
                    color: utils.get_color_from_hex("#FF0000")
                    id:info
                    bold:True
                TextInput:
                    hint_text:"Username"
                    size_hint:( .4, .1)
                    pos_hint:{'right':0.7, 'y':0.34}
                    id:usr
                    multiline:False
                    focus:True
                    on_text_validate: password.focus=True
                TextInput:
                    hint_text:"Password"
                    size_hint:( .4, .1)
                    pos_hint:{'right':0.7, 'y':0.23}
                    id:password
                    password:True
                    multiline:False
                    on_text_validate: root.do_login(usr.text, password.text)
                SmoothButton:
                    pos_hint:{'right':0.7, 'y':0.1}
                    size_hint:( .4, .1)
                    text: "Login"
                    backg_color:( 0,0,0,0)
                    on_release: root.do_login(usr.text, password.text)

